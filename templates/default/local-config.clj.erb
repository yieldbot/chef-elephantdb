;; This configuration is stored on a per machine basis

{ :local-root "<%= @node['elephantdb']['data_dir'] %>"
  :download-rate-limit <%= @node['elephantdb']['download_rate_limit'] %>
  :update-interval-s <%= @node['elephantdb']['update_interval']%>
  :hdfs-conf {"fs.default.name" "<%= @hdfsConfFsDefaultName %>"
<% if @hdfsConfFsDefaultName.start_with?("s3") %>
              "fs.s3n.awsAccessKeyId" "<%= @node['aws']['access_key'] %>"
              "fs.s3n.awsSecretAccessKey" "<%= @node['aws']['secret_access_key'] %>"
<% end %>
  }
  :blob-conf {"fs.default.name" "<%= @blobConfFsDefaultName %>"
<% if @blobConfFsDefaultName.start_with?("s3") %>
              "fs.s3n.awsAccessKeyId" "<%= @node['aws']['access_key'] %>"
              "fs.s3n.awsSecretAccessKey" "<%= @node['aws']['secret_access_key'] %>"
<% end %>
  }
}
