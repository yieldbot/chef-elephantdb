;; This configuration is stored globally on HDFS

{ :replication <%= @replication %>
  :hosts [<% @cluster_nodes.each do |edb_node| %>"<%= edb_node %>" <% end %>]
  :port <%= node['elephantdb']['port'] %>
  :domains {
    <% @domains.each do |domain| %>
      "<%= domain['id'] %>" "<%= @node['elephantdb']['dfs_path'] %>/<%= domain['id'] %>"
    <% end %>
  }
}
